{
    "name": "Blog_v1_typeorm",
    "version": "0.0.1",
    "description": "API Personal Blog v1",
    "devDependencies": {
        "@types/compression": "^1.7.0",
        "@types/express": "^4.17.2",
        "@types/node": "^8.0.29",
        "@types/response-time": "^2.3.4",
        "@typescript-eslint/eslint-plugin": "^2.21.0",
        "@typescript-eslint/parser": "^2.21.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.10.0",
        "eslint-plugin-prettier": "^3.1.2",
        "nodemon": "^2.0.2",
        "prettier": "^1.19.1",
        "slugify": "^1.4.0",
        "ts-node": "^8.8.1",
        "typescript": "^3.8.3"
    },
    "dependencies": {
        "body-parser": "^1.19.0",
        "compression": "^1.7.4",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "express-validator": "^6.4.0",
        "husky": "^4.2.3",
        "lint-staged": "^10.0.8",
        "module-alias": "^2.2.2",
        "mongodb": "^3.0.8",
        "reflect-metadata": "^0.1.10",
        "response-time": "^2.3.2",
        "typeorm": "0.2.22"
    },
    "scripts": {
        "start": "node --inspect=5858 -r ts-node/register ./src/index.ts",
        "dev": "nodemon",
        "build": "tsc",
        "prod": "tsc && node dist/index.js",
        "lint": "tsc --noEmit && eslint '*/**/*.{js,ts,tsx}' --quiet --fix"
    },
    "nodemonConfig": {
        "ignore": [
            "**/*.test.ts",
            "**/*.spec.ts",
            ".git",
            "node_modules"
        ],
        "watch": [
            "src"
        ],
        "exec": "npm run start",
        "ext": "ts"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,ts,tsx}": [
            "eslint --fix",
            "git add"
        ]
    },
    "_moduleAliases": {
        "@": "./dist"
    }
}
